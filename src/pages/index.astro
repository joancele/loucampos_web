---
import Layout from "../layouts/Layout.astro";
import HeroCarousel from "../components/HeroCarousel.astro";

const slides = [
  {
    imageDesktop: "/portada1.jpg",
    imageMobile: "/portada1_v.jpg", // REPLACE THIS LATER IF THERES A MOBILE SPECIFIC ONE
    title: "Explora mi mundo",
    titleI18n: "hero.slide1.title",
    buttonText: "Ver todas las Obras",
    buttonI18n: "hero.slide1.btn",
    link: "/works",
  },
  {
    imageDesktop: "/portada2.jpg",
    imageMobile: "/portada2_v.jpg", // REPLACE THIS LATER IF THERES A MOBILE SPECIFIC ONE
    title: "Fotografía y Captura",
    titleI18n: "hero.slide2.title",
    buttonText: "Ver Fotografía",
    buttonI18n: "hero.slide2.btn",
    link: "/works/fotografia",
  },
  {
    imageDesktop: "/images/preview_plastic_arts.png",
    imageMobile: "/images/preview_plastic_arts.png", // REPLACE THIS LATER IF THERES A MOBILE SPECIFIC ONE
    title: "Artes Plásticas",
    titleI18n: "hero.slide3.title",
    buttonText: "Ver Artes Plásticas",
    buttonI18n: "hero.slide3.btn",
    link: "/works/plastic-arts",
  },
];
---

<Layout title="Lou Campos - Artist Portfolio">
  <main
    class="flex-grow w-full relative h-[calc(100vh-140px)] landscape:h-[calc(100vh-80px)] md:h-[calc(100vh-180px)] md:landscape:h-[calc(100vh-180px)] overflow-hidden bg-black"
  >
    <HeroCarousel slides={slides} />
  </main>
</Layout>
