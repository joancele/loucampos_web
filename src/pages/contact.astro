---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lou Campos - Contact">
    <main
        class="flex-grow w-full max-w-[1200px] mx-auto px-6 md:px-12 flex flex-col items-center justify-center py-12 md:py-20"
    >
        <section class="w-full text-center mb-12 md:mb-16 animate-fade-in-up">
            <h2
                class="font-serif font-normal text-5xl md:text-7xl lg:text-8xl text-dark-grey dark:text-white tracking-tight"
            >
                Let's Connect
            </h2>
        </section>
        <div
            class="flex flex-col items-center justify-center w-full max-w-2xl text-center"
        >
            <div class="space-y-12 w-full">
                <div class="space-y-6">
                    <h3
                        class="font-sans font-medium text-xs tracking-[0.15em] uppercase text-gray-500 dark:text-gray-400"
                    >
                        Direct Contact
                    </h3>
                    <a
                        class="block font-sans font-bold text-3xl md:text-4xl lg:text-5xl text-dark-grey dark:text-white hover:text-accent-pink transition-colors break-words"
                        href="mailto:studio@loucampos.art"
                    >
                        studio@loucampos.art
                    </a>
                    <p
                        class="font-serif text-lg text-gray-600 dark:text-gray-300 italic max-w-lg mx-auto"
                    >
                        For all inquiries regarding available works,
                        commissions, and press.
                    </p>
                </div>
                <div class="w-24 h-[1px] bg-accent-pink mx-auto"></div>
                <div class="space-y-8">
                    <h3
                        class="font-sans font-medium text-xs tracking-[0.15em] uppercase text-gray-500 dark:text-gray-400"
                    >
                        Social
                    </h3>
                    <ul
                        class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-12"
                    >
                        <li>
                            <a
                                class="group flex items-center gap-2 text-dark-grey dark:text-white hover:text-accent-pink transition-colors"
                                href="#"
                            >
                                <span class="font-sans text-xl font-medium"
                                    >Instagram</span
                                >
                                <span
                                    class="material-symbols-outlined text-xl opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
                                    >arrow_outward</span
                                >
                            </a>
                        </li>
                        <li>
                            <a
                                class="group flex items-center gap-2 text-dark-grey dark:text-white hover:text-accent-pink transition-colors"
                                href="#"
                            >
                                <span class="font-sans text-xl font-medium"
                                    >Twitter / X</span
                                >
                                <span
                                    class="material-symbols-outlined text-xl opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
                                    >arrow_outward</span
                                >
                            </a>
                        </li>
                        <li>
                            <a
                                class="group flex items-center gap-2 text-dark-grey dark:text-white hover:text-accent-pink transition-colors"
                                href="#"
                            >
                                <span class="font-sans text-xl font-medium"
                                    >LinkedIn</span
                                >
                                <span
                                    class="material-symbols-outlined text-xl opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
                                    >arrow_outward</span
                                >
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="pt-12">
                    <p
                        class="font-serif text-sm text-gray-400 dark:text-gray-500 italic"
                    >
                        Based in Tokyo. Available worldwide.
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>
