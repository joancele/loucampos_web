---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lou Campos - Works">
  <main
    class="flex flex-col landscape:flex-row w-full grow relative overflow-hidden"
  >
    <a
      class="group relative flex flex-1 overflow-hidden items-center justify-center p-6"
      href="/works/plastic-arts"
    >
      <div
        class="absolute inset-0 bg-cover bg-center transition-transform duration-700 ease-out group-hover:scale-105"
        data-alt="Abstract colorful oil painting texture"
        style="background-image: url('/images/preview_plastic_arts.jpg');"
      >
      </div>
      <div
        class="absolute inset-0 bg-black/20 group-hover:bg-black/10 shadow-[inset_0_0_150px_rgba(0,0,0,0.8)] dark:shadow-[inset_0_0_150px_rgba(0,0,0,0.95)] group-hover:shadow-[inset_0_0_80px_rgba(0,0,0,0.7)] transition-all duration-500"
      >
      </div>

      <div
        class="relative z-10 flex flex-col items-center justify-center text-center w-full max-w-lg"
      >
        <span
          class="mb-6 inline-flex items-center justify-center rounded-full bg-white/10 backdrop-blur-md p-4 text-white shadow-[0_0_30px_rgba(255,255,255,0.1)] transition-transform duration-500 group-hover:-translate-y-3 group-hover:bg-accent-pink/20 group-hover:text-accent-pink border border-white/20 group-hover:border-accent-pink/50 group-hover:shadow-[0_0_40px_rgba(232,61,142,0.3)]"
        >
          <span
            class="font-japanese text-3xl md:text-4xl lg:text-5xl leading-none w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16 flex items-center justify-center"
            >画</span
          >
        </span>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-montserrat font-black text-white tracking-tighter uppercase drop-shadow-lg group-hover:text-accent-pink transition-colors duration-300"
          data-i18n="works.plastic"
        >
          Obra Plástica
        </h2>

        <div
          class="mt-8 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200"
        >
          <span
            class="inline-flex items-center gap-2 text-white font-bold tracking-wide uppercase text-xs font-montserrat border-b border-accent-pink pb-1"
          >
            <span data-i18n="works.plastic.cta">Ver Galería</span>
            <span class="material-symbols-outlined text-sm">arrow_forward</span>
          </span>
        </div>
      </div>
    </a>

    <a
      class="group relative flex flex-1 overflow-hidden border-t landscape:border-t-0 landscape:border-l border-background-light dark:border-background-dark items-center justify-center p-6"
      href="/works/fotografia"
    >
      <div
        class="absolute inset-0 bg-cover bg-center transition-transform duration-700 ease-out group-hover:scale-105"
        data-alt="Black and white artistic portrait photography"
        style="background-image: url('/images/preview_fotografia.jpg');"
      >
      </div>
      <div
        class="absolute inset-0 bg-black/20 group-hover:bg-black/10 shadow-[inset_0_0_150px_rgba(0,0,0,0.8)] dark:shadow-[inset_0_0_150px_rgba(0,0,0,0.95)] group-hover:shadow-[inset_0_0_80px_rgba(0,0,0,0.7)] transition-all duration-500"
      >
      </div>

      <div
        class="relative z-10 flex flex-col items-center justify-center text-center w-full max-w-lg"
      >
        <span
          class="mb-6 inline-flex items-center justify-center rounded-full bg-white/10 backdrop-blur-md p-4 text-white shadow-[0_0_30px_rgba(255,255,255,0.1)] transition-transform duration-500 group-hover:-translate-y-3 group-hover:bg-accent-pink/20 group-hover:text-accent-pink border border-white/20 group-hover:border-accent-pink/50 group-hover:shadow-[0_0_40px_rgba(232,61,142,0.3)]"
        >
          <span
            class="font-japanese text-3xl md:text-4xl lg:text-5xl leading-none w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16 flex items-center justify-center"
            >写</span
          >
        </span>
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-montserrat font-black text-white tracking-tighter uppercase drop-shadow-lg group-hover:text-accent-pink transition-colors duration-300"
          data-i18n="works.photo"
        >
          Fotografía
        </h2>

        <div
          class="mt-8 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200"
        >
          <span
            class="inline-flex items-center gap-2 text-white font-bold tracking-wide uppercase text-xs font-montserrat border-b border-accent-pink pb-1"
          >
            <span data-i18n="works.photo.cta">Ver Fotos</span>
            <span class="material-symbols-outlined text-sm">arrow_forward</span>
          </span>
        </div>
      </div>
    </a>
  </main>
</Layout>
